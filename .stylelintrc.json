{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order",
    "stylelint-config-htmlacademy"
  ],
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "rules": {
    "declaration-no-important": true,
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "property-no-unknown": [
      true,
      {
      "ignoreProperties": [
        "composes"
        ]
      }
    ]
  }
}
